@model IEnumerable<Category>


@{
    ViewData["Title"] = "Category";
}

<div class="table-responsive pt-3 ">
    <div class="create-btn my-5">
        <a asp-controller="Category" asp-action="Create" class="btn btn-success">Create</a>
    </div>
    <table class="table table-bordered">

        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        <button type="button" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></button>
                        <button type="button" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></button>
                        <button type="button" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                    </td>
                </tr>
            }






        </tbody>
    </table>
</div>



